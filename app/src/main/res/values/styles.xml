<resources>

    <!-- Estilo base para la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/filmspot_background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Estilos para textos comunes y títulos -->
    <style name="TextAppearance.FilmSpot" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.FilmSpot.Title" parent="TextAppearance.FilmSpot">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FilmSpot.Subtitle" parent="TextAppearance.FilmSpot">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Estilo para botones comunes en la app -->
    <style name="Widget.FilmSpot.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/filmspot_background</item>
    </style>

    <!-- Estilo específico para botones de acción como 'Sign In', 'Sign Up' -->
    <style name="Widget.FilmSpot.Button.Action" parent="Widget.FilmSpot.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para campos de texto (TextInputLayout) -->
    <style name="Widget.FilmSpot.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/filmspot_background</item>
    </style>

</resources>
